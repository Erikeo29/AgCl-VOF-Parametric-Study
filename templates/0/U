FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../system/parameters"

// GÉOMÉTRIE 2D COMPLÈTE (sans symétrie)
// Pour permettre des angles de contact différents gauche/droite
// Inlet: injection vers le bas (-y)
// Vitesse et temps de dispense definis dans parameters

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    // === Faces 2D (empty) ===
    front
    {
        type            empty;
    }

    back
    {
        type            empty;
    }

    // === Substrat (no-slip wall) ===
    substrate
    {
        type            noSlip;
    }

    // === Paroi verticale de l'isolant GAUCHE (no-slip) ===
    wall_isolant_left
    {
        type            noSlip;
    }

    // === Paroi verticale de l'isolant DROITE (no-slip) ===
    wall_isolant_right
    {
        type            noSlip;
    }

    // === Surface horizontale de l'isolant GAUCHE (no-slip) ===
    top_isolant_left
    {
        type            noSlip;
    }

    // === Surface horizontale de l'isolant DROITE (no-slip) ===
    top_isolant_right
    {
        type            noSlip;
    }

    // === Paroi INTERIEURE de la buse GAUCHE (no-slip) ===
    wall_buse_left_int
    {
        type            noSlip;
    }

    // === Paroi EXTERIEURE de la buse GAUCHE (no-slip) ===
    wall_buse_left_ext
    {
        type            noSlip;
    }

    // === Paroi INTERIEURE de la buse DROITE (no-slip) ===
    wall_buse_right_int
    {
        type            noSlip;
    }

    // === Paroi EXTERIEURE de la buse DROITE (no-slip) ===
    wall_buse_right_ext
    {
        type            noSlip;
    }

    // === Inlet (haut de la buse, injection encre vers le bas) ===
    // Vitesse et temps definis dans system/parameters
    inlet
    {
        type            uniformFixedValue;
        uniformValue    table
        (
            (0.000                                      (0 #calc "-$dispense_velocity" 0))
            ($dispense_end                              (0 #calc "-$dispense_velocity" 0))
            (#calc "$dispense_end + 0.0001"             (0 0 0))
            ($endTime                                   (0 0 0))
        );
    }

    // === Atmosphere (top, pression outlet) ===
    atmosphere
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
    }

    // === Outlet GAUCHE (x=-0.8) ===
    outlet_left
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
    }

    // === Outlet DROITE (x=0.8) ===
    outlet_right
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
    }
}

// ************************************************************************* //
