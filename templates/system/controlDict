FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// ============================================================================
// INCLUSION DU FICHIER CENTRAL DE PARAMETRES
// ============================================================================
#include "parameters"

// ============================================================================
// CONFIGURATION DU SOLVEUR
// ============================================================================

application     interFoam;

startFrom       startTime;
startTime       0;

stopAt          endTime;
endTime         $endTime;

deltaT          $deltaT;

writeControl    adjustableRunTime;
writeInterval   $writeInterval;

purgeWrite      0;

writeFormat     ascii;
writePrecision  6;
writeCompression off;

timeFormat      general;
timePrecision   6;

runTimeModifiable yes;

// Courant constraint for VOF stability
adjustTimeStep  yes;

maxCo           $maxCo;
maxAlphaCo      $maxAlphaCo;
maxDeltaT       $maxDeltaT;

