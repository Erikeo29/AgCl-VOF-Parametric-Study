FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      createPatchDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Convert wedge patches from type 'patch' to type 'wedge'
// Required for axisymmetric VOF simulation

pointSync false;

patches
(
    {
        name wedge_front;
        patchInfo
        {
            type wedge;
        }
        constructFrom patches;
        patches (wedge_front);
    }

    {
        name wedge_back;
        patchInfo
        {
            type wedge;
        }
        constructFrom patches;
        patches (wedge_back);
    }
);

// ************************************************************************* //
