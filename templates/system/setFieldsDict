FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// ============================================================================
// INCLUSION DU FICHIER CENTRAL DE PARAMETRES
// ============================================================================
#include "parameters"

// ============================================================================
// INITIALISATION DU CHAMP ALPHA (phase encre dans la buse)
// Coordonnees en metres (SI)
// ============================================================================

// Variables en metres pour la box (avec decalage x_gap_buse)
x_buse_left_m   #calc "-$x_buse_half_m + $x_gap_buse_m";
x_buse_right_m  #calc "$x_buse_half_m + $x_gap_buse_m";

defaultFieldValues
(
    volScalarFieldValue alpha.water 0  // Air everywhere initially
);

regions
(
    // Initialize ink in the LOWER PART of the nozzle only!
    // IMPORTANT: La buse n'est PAS remplie a 100%!
    // L'air au-dessus (y_ink_top -> y_buse_top) pousse l'encre via fvOptions
    // Box: x in [x_buse_left, x_buse_right], y in [y_buse_bottom, y_ink_top]
    boxToCell
    {
        box ($x_buse_left_m $y_buse_bottom_m -1) ($x_buse_right_m $y_ink_top_m 1);
        fieldValues
        (
            volScalarFieldValue alpha.water 1  // Ink in lower part of nozzle
        );
    }
);

// ************************************************************************* //
